{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile",
    "buildArgs": {
      "RUSTFLAGS": "-C target-feature=-crt-static"
    }
  },
  "deploy": {
    "startCommand": "./httpd",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "port": 8000
  }
}
